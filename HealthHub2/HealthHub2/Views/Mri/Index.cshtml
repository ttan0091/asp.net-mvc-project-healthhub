@{
    ViewBag.Title = "MRI Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="doctors-list-section">
    <div class="auto-container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="widget widget-categories">
                    <h3 class="widget-title">MRI Service</h3>
                    <ul class="list">
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "BookMriService" })">Book MRI Service</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "BookConsultation" })">Book a Consultation</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "CheckImages" })">Check My Images</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "CheckConsultation" })">Check My Consultation</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "CheckBills" })">Check My Bills</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "SendEmail" })">Send an Email</a></li>
                        <li><a href="@Url.Action("Index", "Mri", new { viewName = "RateDoctor" })">Rate a Doctor</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-9 col-md-6">
                @{
                    if (ViewBag.ViewName == "BookMriService")
                    {
                        Html.RenderAction("BookMriService", "Mri");
                    }
                    else if (ViewBag.ViewName == "BookConsultation")
                    {
                        Html.RenderAction("BookConsultation", "Mri");
                    }
                    else if (ViewBag.ViewName == "CheckImages")
                    {
                        Html.RenderAction("CheckImages", "Mri");
                    }
                    else if (ViewBag.ViewName == "CheckConsultation")
                    {
                        Html.RenderAction("CheckConsultation", "Mri");
                    }
                    else if (ViewBag.ViewName == "CheckBills")
                    {
                        Html.RenderAction("CheckBills", "Mri");
                    }
                    else if (ViewBag.ViewName == "SendEmail")
                    {
                        Html.RenderAction("SendEmail", "Mri");
                    }
                    else if (ViewBag.ViewName == "RateDoctor")
                    {
                        Html.RenderAction("RateDoctor", "Mri");
                    }
                }
            </div>




        </div>
    </div>
</section>































