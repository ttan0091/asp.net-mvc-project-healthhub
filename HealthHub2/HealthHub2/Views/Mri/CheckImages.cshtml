@model List<HealthHub2.ViewModels.MedicalImageInfoViewModel>

@{
    ViewBag.Title = "Check Medical Images";
}

<h2>My Medical Images</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info mt-5">
        <strong>No medical images found.</strong>
    </div>
}
else
{
    <div class="short-box clearfix mt-3 col-lg-5 ">
        <div class="select-box">
            <select class="wide" id="sortOrderSelect">
                <option data-display="Sort by">Sort by</option>
                <option value="@Url.Action("CheckImages", new { sortOrder = "date_desc" })">Appointment Date Descending</option>
                <option value="@Url.Action("CheckImages", new { sortOrder = "date_asc" })">Appointment Date Ascending</option>
                <option value="@Url.Action("CheckImages", new { sortOrder = "upload_asc" })">Upload Date Ascending</option>
                <option value="@Url.Action("CheckImages", new { sortOrder = "upload_desc" })">Upload Date Descending</option>
            </select>
        </div>
    </div>
    <a href="@Url.Action("CheckImages", new { sortOrder = "date_desc" })" class="btn btn-primary">Sort by Appointment Date Descending</a>
    <a href="@Url.Action("CheckImages", new { sortOrder = "date_asc" })" class="btn btn-primary">Sort by Appointment Date Descending</a>
    <a href="@Url.Action("CheckImages", new { sortOrder = "upload_asc" })" class="btn btn-primary">Sort by Appointment Date Descending</a>
    <a href="@Url.Action("CheckImages", new { sortOrder = "upload_desc" })" class="btn btn-primary">Sort by Appointment Date Descending</a>



    <table class="table table-striped fs-6 mt-3 shadow">
        <thead>
            <tr>
                <th>Appointment Date</th>
                <th>Service Type</th>
                <th>Clinic Name</th>
                <th>Doctor Name</th>
                <th>Status</th>
                <th>Upload Date</th>
                <th>Medical Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceType)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlaceName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DoctorFullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.UploadDate)</td>
                    <td><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Medical Image" width="100" height="100"></td>
                </tr>
            }
        </tbody>
    </table>
}

