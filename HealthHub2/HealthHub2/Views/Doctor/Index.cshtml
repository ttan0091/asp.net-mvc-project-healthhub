@model IEnumerable<HealthHub2.Models.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auto-container" style="margin-top:150px; margin-bottom:120px;">

    <h2>Doctor Details</h2>

    <p>
        @Html.ActionLink("Create New", "Create", "",new { @class = "btn btn-primary mt-3" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="d-none d-md-table-cell">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="d-none d-md-table-cell">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td class="d-none d-md-table-cell">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="d-none d-md-table-cell">
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.DoctorId }, new { @class = "btn btn-primary" }) 
@Html.ActionLink("Delete", "Delete", new { id = item.DoctorId }, new { @class = "btn btn-primary" })

                </td>
            </tr>
        }

    </table>
</div>
