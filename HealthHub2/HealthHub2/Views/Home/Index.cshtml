@{
    ViewBag.Title = "Home Page";
}


<section class="banner-section-two">

    <div class="bg-image" style="background-image: url(../assets/images/background/bg-5.jpg);"></div>
    <div class="shape" style="background-image: url(../assets/images/shape/shape-13.png);"></div>

    <div class="auto-container">
        <div class="text-block">
            <h4 style="color: var(--theme_dark)">Welcome To HealthHub Connect</h4>

            <h2 style="color: var(--theme_dark)">Find Nearest Clinic</h2>
            <form>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group mx-0">
                            <input type="text" placeholder="Search doctors. clinics. hospitals. etc.">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div class="left-side">
                                <input type="text" placeholder="Locations">
                                <i class="docpoint-icon-2"></i>
                            </div>
                            <div class="right-side">
                                <button type="submit" class="theme-btn style-one"><i class="docpoint-icon-3"></i> Find Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


<section class="about__section style-two">
    <div class="auto-container">
        <div class="row align-items-center">
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="image__block image-1">
                    <img src="../assets/images/resource/image-14.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="content__block">
                    <div class="sec-title mb-40">
                        <div class="sub-title">About Us <span class="text-decor"></span></div>
                        <h2>Experienced Workers </h2>
                        <div class="text">At our esteemed institution, we pride ourselves on the unparalleled expertise of our medical staff. All of our doctors are not just trained professionals, but they are seasoned practitioners with extensive experience in their respective fields. Over the years, they have encountered a diverse range of medical cases, enhancing their practical knowledge and skills. This wealth of experience ensures that our patients receive the highest standard of care, backed by profound medical insight and a compassionate understanding of their needs. Trust in our team, for they represent a legacy of excellence and dedication in the medical community.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features section style two -->
<section class="features-section style-two">
    <div class="auto-container">
        <div class="wrapper-box">
            <div class="outer-box">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-12 feature-block">
                        <div class="inner-box">
                            <h4>
                                <a href="#">MRI</a>
                            </h4>
                            <div class="text">Magnetic Resonance Imaging (MRI) is a non-invasive medical imaging technique that uses powerful magnets and radio waves to produce detailed images of the body's internal structures.</div>
                            <div class="link-btn ">
                                <div class="d-flex align-items-center justify-content-center">
                                    <h6 class="text mb-0 mr-5">Learn More </h6>
                                    <a href="#" class="link ml-20">
                                        <i class="docpoint-icon-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-12 feature-block">
                        <div class="inner-box ">
                            <h4>
                                <a href="#">X-ray</a>
                            </h4>
                            <div class="text ">X-ray is a pioneering medical imaging technique that uses ionizing radiation to capture images of the body's internal structures. It is commonly used to diagnose bone fractures.</div>
                            <div class="link-btn ">
                                <div class="d-flex align-items-center justify-content-center">
                                    <h6 class="text mb-0 mr-5">Learn More </h6>
                                    <a href="#" class="link ml-20">
                                        <i class="docpoint-icon-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 feature-block">
                        <div class="inner-box ">
                            <h4>
                                <a href="#">CT</a>
                            </h4>
                            <div class="text ">Computed Tomography (CT), also known as a CAT scan, is an advanced imaging technique that uses X-rays to obtain cross-sectional images of the body. It provides detailed information.</div>
                            <div class="link-btn ">
                                <div class="d-flex align-items-center justify-content-center">
                                    <h6 class="text mb-0 mr-5">Learn More </h6>
                                    <a href="#" class="link ml-20">
                                        <i class="docpoint-icon-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-12 feature-block">
                        <div class="inner-box ">
                            <h4>
                                <a href="#">Ultrasound</a>
                            </h4>
                            <div class="text ">Ultrasound is a diagnostic imaging technique that uses high-frequency sound waves to produce real-time images of the body's internal organs. It's non-invasive and is especially useful.</div>
                            <div class="link-btn ">
                                <div class="d-flex align-items-center justify-content-center">
                                    <h6 class="text mb-0 mr-5">Learn More </h6>
                                    <a href="#" class="link ml-20">
                                        <i class="docpoint-icon-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script>
        $(document).ready(function() {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                alert(successMessage);
            }
        });
</script>








